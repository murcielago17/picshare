<!DOCTYPE html>
<html>
<head>
  <title>PicShare</title>
  <script type="text/javascript" src="http://www.clubdesign.at/floatlabels.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      
      <%= link_to "PicShare", root_path, class: "siteLogo siteLogoNav navbar-brand page-scroll a" %>
      <!-- <a class="navbar-brand" href="#">Picshare</a> -->
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Home</a></li>
        <li><a href="#about">About</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
        <li><a href="#">Signed in as <%= current_user.name %> </a></li> <li><%= link_to "Logout", '/logout', class: "a"%></li>
      <% else %>
        <li><%= link_to 'Login', '/login' %> </li> <li><%= link_to 'Signup', '/signup', class: "a" %></li>
      <% end %>
        
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>
<% if flash[:notice] %>
  <div id="notice"> <%= flash[:notice]  %></div>
<% end %>

<div class="wide">
  	<div class="col-xs-5"><hr></div>
    <div class="col-xs-2 logo">PICSHARE</div>
    <div class="col-xs-5"><hr></div>
</div>
<br>
<!-- <div class="container">
  <div class="text-center">
    <h1>Content</h1>
  </div>
</div> --><!-- /.container -->


<%= yield %>

</body>
</html>
