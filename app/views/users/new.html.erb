<div class="container">
	<div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
      	<div class="panel-heading">
			    <h3 class="panel-title">Please sign up to start sharing and borrowing</h3>
			 	</div>
			 	<div class="panel-body">
			 		
			    
			    	<%= form_for :user, :url =>{:action => 'create'}, :html => { :method => 'post', :multipart => true } do |f| %>
			    		<div class="row">
			    			<div class="col-xs-6 col-sm-6 col-md-6">
			    				<div class="form-group">
			    					Name: <%= f.text_field :name %>
			    				</div>
			    			</div>
			    		</div>
			    		<div class="row">
			    			<div class="col-xs-6 col-sm-6 col-md-6">
					    		<div class="form-group">
					    			Email: <%= f.text_field :email %>			    
					    		</div>
					    		<div class="row">
					    			<div class="col-xs-6 col-sm-6 col-md-6">
					    				<div class="form-group">
					    					Password: <%= f.password_field :password %>			    					
					    				</div>
					    			</div>
					    		</div>
			    			</div>
			    		</div>
			    		<div class="row">
				    		<div class="col-xs-6 col-sm-6 col-md-6">
				    			<div class="form-group">
				    				Password Confirmation: <%= f.password_field :password_confirmation %>
				    			</div>
				    		</div>
			    		</div>
  		    		<div class="row">
  			    		<div class="col-xs-6 col-sm-6 col-md-6">
  			    			<div class="form-group">
  			    				profile photo: <%= f.file_field :avatar %>
  			    			</div>
  			    		</div>
  		    		</div>
			    		<h4 class="text-center"><%= f.submit "Submit" , class:"btn btn-primary" %></h4> 
			    	<% end %>
			    
			  </div>
	    </div>
    </div>
  </div>
</div>
