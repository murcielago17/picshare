<div class="container">
	<div class="col-lg-12 text-center">
		<% @items.each do |item| %>
		 <div class="col-lg-4 well">
		
		 <p>
		 	 <div class= "image-holder text-center"><img src="<%= item.image_url  %>" alt="picture of <%= item.name %>"></div>
			 <strong>Name:</strong> <%= link_to item.name, item %><br>
			 <strong>Description:</strong><%= item.description %>
		 </p>
		 </div>
		<% end %>

		<h1 class="btn btn-success"><%= link_to "View all users", '/users' %></h1>	
	</div>
</div>
