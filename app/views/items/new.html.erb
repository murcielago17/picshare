<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Describe the Item you want to Share</h3>
			 			</div>
			 			<div class="panel-body">
			    		
								<%= form_for @item do |f|  %>
									<h3>Item:</h3>
									<%= f.text_field :name %>
									
									<br><br>
									
									<h3>Type:</h3> <!-- Description -->
									<%=f.select :description, ["Photo Camera","Video Camera","Photo Lens","Video Lens","Flash","Lights","Other gear"]%>
									
									<br><br>
									<h3 class="text-center"><%= f.submit "Save Item" %></h3>
								<% end %>
							
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>

